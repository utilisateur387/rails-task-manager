<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>

<p>
  <% if @task.completed %>
  <%= 'This task was completed' %>
  <% else %>
  <%= 'This task was not yet completed' %>
  <% end %>
</p>

<%= link_to "Edit task", tasks_edit_path(@task) %>

<%= link_to "Delete",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to "Back to list", tasks_path %>
